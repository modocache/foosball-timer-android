<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/seconds_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:textSize="90dp" />

    <TextView
        android:id="@+id/seconds_description_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seconds_textview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/seconds_description_textview_text"
		android:textSize="30dp" />

    <Button
        android:id="@+id/start_game_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seconds_description_textview"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:onClick="onStartGameButtonClick"
        android:text="@string/start_game_button_text" />

</RelativeLayout>
